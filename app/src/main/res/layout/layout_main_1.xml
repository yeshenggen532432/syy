<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:background="@drawable/shape_bg_white_r5"
    android:layout_margin="@dimen/dp_10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="@dimen/dp_10"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal">

        <TextView
            style="@style/tv_cgray3_s13"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:background="@drawable/shape_line_green_w1_r2"
            android:gravity="center"
            tools:text="2020-07-22"/>

        <TextView
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/green"
            tools:text="~"/>

        <TextView
            style="@style/tv_cgray3_s13"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:background="@drawable/shape_line_green_w1_r2"
            android:gravity="center"
            tools:text="2020-07-22"/>

    </LinearLayout>

    <RadioGroup
        android:layout_marginBottom="@dimen/dp_10"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:orientation="horizontal">

        <RadioButton
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:button="@null"
            android:background="@drawable/selector_c_green_r2"
            android:textColor="@color/selector_white_to_gray"
            android:gravity="center"
            android:text="昨天"/>

        <RadioButton
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:button="@null"
            android:background="@drawable/selector_c_green_r2"
            android:textColor="@color/selector_white_to_gray"
            android:gravity="center"
            android:checked="true"
            android:text="今天"/>
        <RadioButton
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:button="@null"
            android:background="@drawable/selector_c_green_r2"
            android:textColor="@color/selector_white_to_gray"
            android:gravity="center"
            android:text="本周"/>
        <RadioButton
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:button="@null"
            android:background="@drawable/selector_c_green_r2"
            android:textColor="@color/selector_white_to_gray"
            android:gravity="center"
            android:text="本月"/>

    </RadioGroup>

    <LinearLayout
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_bg_red_r2"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                style="@style/tv_cred_s22"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="222"/>
            <TextView
                style="@style/tv_cred_s15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日收银(元)"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_bg_red_r2"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                style="@style/tv_cred_s22"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="500"/>
            <TextView
                style="@style/tv_cred_s15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员充值(元)"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:background="@drawable/shape_bg_red_r2"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                style="@style/tv_cred_s22"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="222"/>
            <TextView
                style="@style/tv_cred_s15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="批发额(元)"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_bg_red_r2"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                style="@style/tv_cred_s22"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="222"/>
            <TextView
                style="@style/tv_cred_s15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日收银(元)"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_bg_red_r2"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                style="@style/tv_cred_s22"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="500"/>
            <TextView
                style="@style/tv_cred_s15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员充值(元)"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/shape_bg_red_r2"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                style="@style/tv_cred_s22"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="222"/>
            <TextView
                style="@style/tv_cred_s15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="批发额(元)"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>